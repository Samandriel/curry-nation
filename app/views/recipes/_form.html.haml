= form_for(@recipe) do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2
        = pluralize(@recipe.errors.count, "error")
        prohibited this recipe from being saved:
      %ul
        - @recipe.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :cooking_time
    %br/
    = f.text_field :cooking_time
  .field
    = f.label :dificulty_level
    %br/
    = f.select :dificulty_level, Recipe::DIFFICULTY, {} , :class => "form-control"
  .field
    = f.label :food_type_id
    %br/
    = f.select(:food_type_id, options_from_collection_for_select(FoodType.all, :id, :name), {:prompt => "Plase Choose"}, :class => "form-control")
  .field
    = f.label :food_preference_id
    %br/
    = f.select(:food_preference_id, options_from_collection_for_select(FoodPreference.all, :id, :name), {:prompt => 'Please Choose'}, :class => "form-control")
  .field
    = f.label :cuisine_id
    %br/
    = f.select(:cuisine_id, options_from_collection_for_select(Cuisine.all, :id, :name), {:prompt => "Please Choose"}, :class => "form-control")
  .field
    = f.label :ingredients
    %br/
    = f.text_area :ingredients
  .field
    = f.label :procedure
    %br/
    = f.text_area :procedure
  .actions
    = f.submit
